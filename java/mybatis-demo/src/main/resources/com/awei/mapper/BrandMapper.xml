      <!--
      参数占位符
      1.#{}=？，防止sql注入
      2.${}=拼sql,会存在sql注入问题

      转义字符:< =&lt;
      CDATA区：CD提示

      -->
    <select id="selectById" resultMap="brandResultMap">
        select *
        from tb_brand
        where id = #{id};
    </select>

